<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Основная тема приложения -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <!-- Стиль для главной активности -->
    <style name="MainActivityStyle">
        <item name="android:background">@color/backgroundColor</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <!-- Стиль для второй активности -->
    <style name="SecondActivityStyle">
        <item name="android:background">@color/backgroundColor</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <!-- Стиль для кнопок -->
    <style name="ButtonStyle">
        <item name="android:backgroundTint">@color/buttonBackground</item>
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- Стиль для EditText -->
        <style name="EditTextStyle">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:background">@drawable/background_edittext</item>
            <item name="android:paddingLeft">16dp</item>
            <item name="android:paddingRight">16dp</item>
            <item name="android:paddingTop">12dp</item>
            <item name="android:paddingBottom">12dp</item>
            <item name="android:textColor">@color/colorTextPrimary</item>
            <item name="android:textSize">16sp</item>
            <item name="android:hint">Введите текст</item>
        </style>

</resources>
